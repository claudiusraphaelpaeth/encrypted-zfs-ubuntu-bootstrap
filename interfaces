auto lo
iface lo inet loopback

auto eth0
iface eth0 inet manual

auto wlan0
iface wlan0 inet manual

auto brlan
iface brlan inet dhcp
    bridge-stp off
    bridge-waitport 0
    bridge-fd 0
    bridge-ports eth0

auto brwlan
iface brwlan inet dhcp
    bridge-stp off
    bridge-waitport 0
    bridge-fd 0
    bridge-ports wlan
